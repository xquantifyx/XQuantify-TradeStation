# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2
end_of_line = lf

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
end_of_line = lf

# Configuration files
[*.conf]
indent_style = space
indent_size = 4
end_of_line = lf

# Makefile
[Makefile]
indent_style = tab
end_of_line = lf

# Python
[*.py]
indent_style = space
indent_size = 4
end_of_line = lf

# JavaScript/JSON
[*.{js,json}]
indent_style = space
indent_size = 2
end_of_line = lf

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
end_of_line = lf
